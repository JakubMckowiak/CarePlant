<UserControl x:Class="CarePlant.Views.HubView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CarePlant.Views"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="400">
    <StackPanel>
        <TextBlock Text="Regular care"
                   Foreground="DarkGreen"
                   FontSize="28"
                   HorizontalAlignment="Left"
                   Margin="0,0,0,20"/>
        <StackPanel Orientation="Horizontal">
            <Border Width="180"
                    Height="150"
                    CornerRadius="20">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                        <GradientStop Color="Aquamarine" Offset="0.0"/>
                        <GradientStop Color="LightSeaGreen" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Grid>
                    <StackPanel>
                        <TextBlock Text=""
                                   Foreground="FloralWhite"
                                   FontSize="28"
                                   Margin="20,10,10,0"/>
                    </StackPanel>
                </Grid>
            </Border>
            <Border Width="180"
                    Height="150"
                    CornerRadius="20"
                    Margin="40,0,0,0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                        <GradientStop Color="LawnGreen" Offset="0.0"/>
                        <GradientStop Color="ForestGreen" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
        </StackPanel>
        
        
        <StackPanel>
            <StackPanel.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="Margin" Value="15,0,0,0"/>
                </Style>
            </StackPanel.Resources>
            <TextBlock Text="Special care"
                   Foreground="DarkGreen"
                   FontSize="28"
                   HorizontalAlignment="Left"
                   Margin="0,20,0,10"/>
            <StackPanel Orientation="Horizontal">
                <Border Width="120"
                    Height="120"
                    CornerRadius="10"
                    Margin="5,0,15,0"
                    Background="DarkKhaki">
                </Border>
                <Border Width="120"
                    Height="120"
                    CornerRadius="10"
                    Margin="0,0,15,0"
                    Background="Teal">
                </Border>
                <Border Width="120"
                    Height="120"
                    CornerRadius="10"
                    Margin="0,0,15,0"
                    Background="Coral">
                </Border>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</UserControl>
