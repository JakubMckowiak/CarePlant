<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarePlant"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity" 
        xmlns:System="clr-namespace:System;assembly=mscorlib" x:Class="CarePlant.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800" AllowsTransparency="True" Background="Transparent"
         WindowStyle="None" WindowStartupLocation="CenterScreen">
    <Grid>

        <Canvas>
            <Ellipse Width="350" Height="600" Fill="FloralWhite" RenderTransformOrigin="0.5,0.5" Canvas.Top="-48">
                <Ellipse.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="89.516"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Ellipse.RenderTransform>
                <Canvas.Left>
                    <System:Double>226</System:Double>
                </Canvas.Left>

            </Ellipse>
            <StackPanel Orientation="Vertical" Width="300" Height="150" Canvas.Left="55" Canvas.Top="20">
                <StackPanel Orientation="Horizontal"  Margin="0,10,0,0"/>
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0"/>

            </StackPanel>
            <TextBlock Canvas.Left="247" Canvas.Top="281" FontSize="35" FontFamily="Berlin Sans FB Demi" Foreground="DarkSeaGreen">
                Fall in love with plants
            </TextBlock>

            <TextBlock Name="bookStoreTxtb2" FontSize="80" TextAlignment="Center" Foreground="Green" RenderTransformOrigin="1.337,1.974" Canvas.Left="235" Canvas.Top="170">
CarePlant
            </TextBlock>
            <Border x:Name="btn" CornerRadius="10" Background="White" Width="50" Height="50" BorderThickness="2" BorderBrush="{StaticResource FirstColor}">

                <Canvas.Left>
                    <System:Double>670</System:Double>
                </Canvas.Left>
                <Canvas.Top>
                    <System:Double>15</System:Double>
                </Canvas.Top>

                <Button x:Name="Exit" Click="Exit_Click"
                        Style="{StaticResource ExitButtonStyle}" Margin="0.4,0.4,0,0" Width="Auto"
                       >
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>

                    </Button.Resources>
                </Button>

            </Border>
            <Button Width="126" Height="60" Background="White" BorderThickness="0" BorderBrush="AliceBlue"
                                Command="{Binding SignInSectionCommand}"
                                Content="Sign In" Foreground="DarkGreen"  FontSize="24" RenderTransformOrigin="1.083,6.82"
                                Canvas.Left="138" Canvas.Top="422"
                                >
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>

                </Button.Resources>
                <Button.Style>
                    <StaticResource ResourceKey="NotDefaultButton"/>
                </Button.Style>
            </Button>
            <Button Width="130" Height="60" Background="White" BorderThickness="0" BorderBrush="AliceBlue"
                Command="{Binding LogInSectionCommand}"
                Content="Log In" Foreground="DarkGreen" FontSize="24" RenderTransformOrigin="2.283,7.247"
                Canvas.Left="525" Canvas.Top="422"
                                >
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>

                </Button.Resources>
                <Button.Style>
                    <StaticResource ResourceKey="NotDefaultButton"/>
                </Button.Style>
            </Button>
            <Ellipse Width="65" Height="28" Fill="ForestGreen" RenderTransformOrigin="0.5,0.5" Canvas.Top="315">
                <Ellipse.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-29.553"/>
                        <TranslateTransform X="-1.143" Y="-0.816"/>
                    </TransformGroup>
                </Ellipse.RenderTransform>
                <Canvas.Left>
                    <System:Double>117</System:Double>
                </Canvas.Left>

            </Ellipse>
            <Ellipse Width="65" Height="28" Fill="ForestGreen" RenderTransformOrigin="0.5,0.5" Canvas.Top="304">
                <Ellipse.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-58.676"/>
                        <TranslateTransform X="1.179" Y="-2.877"/>
                    </TransformGroup>
                </Ellipse.RenderTransform>
                <Canvas.Left>
                    <System:Double>105</System:Double>
                </Canvas.Left>

            </Ellipse>
            <Ellipse Width="65" Height="28" Fill="ForestGreen" RenderTransformOrigin="0.5,0.5" Canvas.Top="330">
                <Ellipse.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="1.193"/>
                        <TranslateTransform X="-4.027" Y="0.734"/>
                    </TransformGroup>
                </Ellipse.RenderTransform>
                <Canvas.Left>
                    <System:Double>126</System:Double>
                </Canvas.Left>

            </Ellipse>
            <Ellipse Width="65" Height="28" Fill="ForestGreen" RenderTransformOrigin="0.5,0.5" Canvas.Top="152">
                <Ellipse.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="155.672"/>
                        <TranslateTransform X="7.425" Y="-11.04"/>
                    </TransformGroup>
                </Ellipse.RenderTransform>
                <Canvas.Left>
                    <System:Double>589</System:Double>
                </Canvas.Left>

            </Ellipse>
            <Ellipse Width="65" Height="28" Fill="ForestGreen" RenderTransformOrigin="0.5,0.5" Canvas.Top="141">
                <Ellipse.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="126.549"/>
                        <TranslateTransform X="29.503" Y="14.528"/>
                    </TransformGroup>
                </Ellipse.RenderTransform>
                <Canvas.Left>
                    <System:Double>576</System:Double>
                </Canvas.Left>

            </Ellipse>
            <Ellipse Width="65" Height="28" Fill="ForestGreen" RenderTransformOrigin="0.5,0.5" Canvas.Top="167">
                <Ellipse.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="186.418"/>
                        <TranslateTransform X="-5.661" Y="-43.382"/>
                    </TransformGroup>
                </Ellipse.RenderTransform>
                <Canvas.Left>
                    <System:Double>598</System:Double>
                </Canvas.Left>

            </Ellipse>
        </Canvas>

    </Grid>
</Window>
