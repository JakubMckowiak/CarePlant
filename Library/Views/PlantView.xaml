<UserControl x:Class="CarePlant.Views.PlantView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             
             xmlns:fa5="http://schemas.fontawesome.com/icons/"
             xmlns:local="clr-namespace:CarePlant.Views"
             mc:Ignorable="d" 
             xmlns:vm="clr-namespace:CarePlant.ViewModels"
             d:DesignHeight="414" d:DesignWidth="500">
    <Control.Resources>
        <vm:PlantViewModel x:Key="plantViewModel"/>
    </Control.Resources>

    <Grid DataContext="{StaticResource plantViewModel}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="125"/>
            <ColumnDefinition Width="125"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock Text="Your plants"
                   Foreground="DarkGreen"
                   FontSize="28"
                   HorizontalAlignment="Left"
                   Margin="0,0,0,10"/>
            <ListView MinHeight="270" Height="270" Margin="0,0,0.4,0"
                      ItemsSource="{Binding Flowers}" SelectedValue="{Binding CurrentFlower, Mode=TwoWay}">
         
            </ListView>
            <StackPanel Orientation="Horizontal" Margin="0,0,-249.6,0" Height="96">
                <Border Width="55"
                    CornerRadius="10"
                    Margin="5,20,15,19">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                            <GradientStop Color="LightSeaGreen" Offset="0.0"/>
                            <GradientStop Color="Blue" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Button Content="&#xf043;" FontFamily="{StaticResource FontAwesome}" Background="Transparent" BorderThickness="0" HorizontalAlignment="Left" Height="57" VerticalAlignment="Top" Width="55" Margin="0,0,0,-0.2">
                        <Button.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="10"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </Border>
                <Border Width="53"
                    CornerRadius="10"
                    Margin="0,20,15,19">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                            <GradientStop Color="LightSkyBlue" Offset="0.0"/>
                            <GradientStop Color="CornflowerBlue" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Button Content="&#xf2cc;" FontFamily="{StaticResource FontAwesome}" Background="Transparent" BorderThickness="0" Height="57" Margin="0,0,-0.2,-0.2" VerticalAlignment="Top">
                    <Button.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="10"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </Border>
                <Border Width="53"
                    CornerRadius="10"
                    Margin="0,20,15,19">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                            <GradientStop Color="LightYellow" Offset="0.0"/>
                            <GradientStop Color="DarkRed" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Button Content="&#xf242;" FontFamily="{StaticResource FontAwesome}" HorizontalAlignment="Left" Background="Transparent" BorderThickness="0"  Height="57" VerticalAlignment="Top" Width="53" Margin="0,0,-0.2,-0.2">
                        <Button.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="10"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                </Border>
                <Border Width="53"
                    CornerRadius="10"
                    Margin="0,20,15,19">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                            <GradientStop Color="LightGoldenrodYellow" Offset="0.0"/>
                            <GradientStop Color="Coral" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Button Content="&#xf079;" FontFamily="{StaticResource FontAwesome}" HorizontalAlignment="Left" Background="Transparent" BorderThickness="0" Height="57" Margin="0,0,-0.2,-0.2" VerticalAlignment="Top" Width="53">
                        <Button.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="10"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                </Border>
                <Border Width="53"
                    CornerRadius="10"
                    Margin="0,20,15,19">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                            <GradientStop Color="LightGoldenrodYellow" Offset="0.0"/>
                            <GradientStop Color="RosyBrown" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Button Content="&#xf0a3;" FontFamily="{StaticResource FontAwesome}" HorizontalAlignment="Left" Background="Transparent" BorderThickness="0" Height="57" VerticalAlignment="Top" Width="53" Margin="0,0,-0.2,-0.2">
                        <Button.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="10"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                </Border>
                <Border Width="53"
                    CornerRadius="10"
                    Margin="0,20,15,19">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                            <GradientStop Color="LemonChiffon" Offset="0.0"/>
                            <GradientStop Color="GreenYellow" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Button Content="&#xf299;" FontFamily="{StaticResource FontAwesome}" HorizontalAlignment="Left" Background="Transparent" BorderThickness="0" Height="57" VerticalAlignment="Top" Width="53" Margin="0,0,-0.2,-0.2">
                        <Button.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="10"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                </Border>
                <Border Width="53"
                    CornerRadius="10"
                    Margin="0,20,15,19">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                            <GradientStop Color="LightPink" Offset="0.0"/>
                            <GradientStop Color="DeepPink" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Button Content="&#xf185;" FontFamily="{StaticResource FontAwesome}" HorizontalAlignment="Left" Background="Transparent" BorderThickness="0" Height="57" VerticalAlignment="Top" Width="53" Margin="0,0,-0.2,-0.2">
                        <Button.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="10"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                </Border>

            </StackPanel>
        </StackPanel>

        <StackPanel Grid.ColumnSpan="2" Margin="250,0,0.2,113.4" >
            <TextBlock Text="Family:"
                   Foreground="DarkGreen"
                   FontSize="20"
                   HorizontalAlignment="Right"
                   Margin="0,50,20,10"/>
            <TextBlock Text="Species:"
                   Foreground="DarkGreen"
                   FontSize="20"
                   HorizontalAlignment="Right"
                   Margin="0,0,20,10"/>
            <TextBlock Text="Name:"
                   Foreground="DarkGreen"
                   FontSize="20"
                   HorizontalAlignment="Right"
                   Margin="0,0,20,80"/>
            <Button Margin="24,-60,19.8,0" Height="36" Command="{Binding Add}">
                <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </Button.Resources>
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                        <GradientStop Color="ForestGreen" Offset="0.0"/>
                        <GradientStop Color="DarkGreen" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
                <TextBlock
                    x:Name="add" Text="&#xf0fe;"  FontFamily="{StaticResource FontAwesome}"
                           Foreground="White"
                           FontSize="20"/>
                
            </Button>
            <Button Margin="24,-6,19.8,0" Height="36" Command="{Binding Edi}">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                        <GradientStop Color="ForestGreen" Offset="0.0"/>
                        <GradientStop Color="DarkGreen" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
                <TextBlock  x:Name="edit" Text="&#xf044;" FontFamily="{StaticResource FontAwesome}"
                    Foreground="White"
                    FontSize="20"/>
            </Button>
            <Button Margin="24,6,19.8,0" Height="36" Command="{Binding Del}">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                        <GradientStop Color="ForestGreen" Offset="0.0"/>
                        <GradientStop Color="DarkGreen" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
                <TextBlock x:Name="delete" Text="&#xf1f8;" FontFamily="{StaticResource FontAwesome}"
                           Foreground="White"
                           FontSize="20"/>
            </Button>
            <Border
                CornerRadius="20" 
                Height="49"
                Margin="17,0,16.8,0" RenderTransformOrigin="0.263,-0.169">
                <Border.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-0.25"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Border.RenderTransform>
            </Border>

        </StackPanel>


        <StackPanel Grid.Column="2">
            <ComboBox Margin="0,55,0,15" Name="FamilyCombo" 
                      ItemsSource="{Binding Families}" SelectedItem="{Binding CurrentFamily, Mode=TwoWay}">
                
            </ComboBox>
            <ComboBox Margin="0,0,0,15" Name="SpeciesCombo" 
                      ItemsSource="{Binding Species}" SelectedItem="{Binding CurrentSpecies, Mode=TwoWay}" />
            
                <TextBox Margin="0,0,-0.2,80" Height="22" Text="{Binding CurrentName, Mode=TwoWay}"/>
        </StackPanel>
    </Grid>
</UserControl>
