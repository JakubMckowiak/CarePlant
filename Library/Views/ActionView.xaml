<UserControl x:Class="CarePlant.Views.ActionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CarePlant.Views"
             xmlns:vm="clr-namespace:CarePlant.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="414" d:DesignWidth="500">
    <Control.Resources>
        <vm:ActionViewModel x:Key="actionViewModel"/>
    </Control.Resources>
    <Grid DataContext="{StaticResource actionViewModel}" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock Text="Urgent"
                   Foreground="DarkGreen"
                   FontSize="28"
                   HorizontalAlignment="Left"
                   Margin="0,0,0,10"/>
            <ListBox MinHeight="150" ItemsSource="{Binding UrgentTodos}">

            </ListBox>
        </StackPanel>
        <Border Grid.Row="0" 
                Grid.Column="1"
                CornerRadius="20"
                Width="150" 
                Height="50"
                Margin="0,30,0,0">
            <Button>
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                        <GradientStop Color="ForestGreen" Offset="0.0"/>
                        <GradientStop Color="DarkGreen" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
                <TextBlock Text="Perform"
                           Foreground="White"
                           FontSize="24"/>
            </Button>
        </Border>
        
        <StackPanel Grid.Row="1">
            <TextBlock Text="Coming soon"
                   Foreground="DarkGreen"
                   FontSize="28"
                   HorizontalAlignment="Left"
                   Margin="0,0,0,10"/>
            <ListView MinHeight="150" ItemsSource="{Binding SoonTodos}"/>
        </StackPanel>
        
        <Border Grid.Row="1" 
                Grid.Column="1"
                CornerRadius="20"
                Width="150" 
                Height="50"
                Margin="0,30,0,0">
            <Button>
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                        <GradientStop Color="ForestGreen" Offset="0.0"/>
                        <GradientStop Color="DarkGreen" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
                <TextBlock Text="Delay"
                           Foreground="White"
                           FontSize="24"/>
            </Button>
        </Border>
    </Grid>
</UserControl>
