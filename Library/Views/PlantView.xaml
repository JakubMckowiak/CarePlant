<UserControl x:Class="CarePlant.Views.PlantView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CarePlant.Views"
             mc:Ignorable="d" 
             d:DesignHeight="414" d:DesignWidth="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="125"/>
            <ColumnDefinition Width="125"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock Text="Your plants"
                   Foreground="DarkGreen"
                   FontSize="28"
                   HorizontalAlignment="Left"
                   Margin="0,0,0,10"/>
            <ListView MinHeight="350" SelectionChanged="ListView_SelectionChanged"/>
        </StackPanel>

        <StackPanel Grid.Column="1" >
            <TextBlock Text="Family:"
                   Foreground="DarkGreen"
                   FontSize="20"
                   HorizontalAlignment="Right"
                   Margin="0,50,20,10"/>
            <TextBlock Text="Species:"
                   Foreground="DarkGreen"
                   FontSize="20"
                   HorizontalAlignment="Right"
                   Margin="0,0,20,10"/>
            <TextBlock Text="Name:"
                   Foreground="DarkGreen"
                   FontSize="20"
                   HorizontalAlignment="Right"
                   Margin="0,0,20,80"/>
            <Border
                CornerRadius="20"
                Width="90" 
                Height="50"
                Margin="0,0,0,0">
                <Button>
                    <Button.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                            <GradientStop Color="Aqua" Offset="0.0"/>
                            <GradientStop Color="DarkCyan" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                    <TextBlock Text="Add"
                           Foreground="White"
                           FontSize="20"/>
                </Button>
            </Border>

            <Border
                CornerRadius="20"
                Width="90" 
                Height="50"
                Margin="0,0,0,0">
                <Button>
                    <Button.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                            <GradientStop Color="Aqua" Offset="0.0"/>
                            <GradientStop Color="DarkCyan" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                    <TextBlock Text="Delete"
                           Foreground="White"
                           FontSize="20"/>
                </Button>
            </Border>

            <Border Grid.Row="0" 
                Grid.Column="1"
                CornerRadius="20"
                Width="90" 
                Height="50"
                Margin="0,10,0,0">
                <Button>
                    <Button.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                            <GradientStop Color="Aquamarine" Offset="0.0"/>
                            <GradientStop Color="LightSeaGreen" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                    <TextBlock Text="Perform:"
                           Foreground="White"
                           FontSize="20"/>
                </Button>
            </Border>
            
        </StackPanel>


        <StackPanel Grid.Column="2">
            <ComboBox Margin="0,55,0,15">
            </ComboBox>
            <ComboBox Margin="0,0,0,15">
            </ComboBox>
            <ComboBox Margin="0,0,0,80">
            </ComboBox>

            <Border Grid.Row="1" 
                Grid.Column="2"
                CornerRadius="20"
                Width="90" 
                Height="50"
                Margin="0,0,0,0">
                <Button>
                    <Button.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                            <GradientStop Color="Aqua" Offset="0.0"/>
                            <GradientStop Color="DarkCyan" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                    <TextBlock Text="Edit"
                           Foreground="White"
                           FontSize="20"/>
                </Button>
            </Border>
            <ComboBox Margin="0,75,0,0">
            </ComboBox>
        </StackPanel>
    </Grid>
</UserControl>
