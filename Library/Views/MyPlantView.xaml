<UserControl x:Class="CarePlant.Views.MyPlantView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CarePlant.Views"
             xmlns:vm="clr-namespace:CarePlant.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="480" d:DesignWidth="500">
    
    <Control.Resources>
        <vm:MyPlantViewModel x:Key="MyPlantViewModel"/>
    </Control.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Column="0" Margin="8,0,0,0">
            <Label Width="116" Height="35" Content="Subsoil:" FontSize="13" Foreground="DarkGreen" Margin="0,40,0,10"/>
            <Label Width="115" Height="35" Content="Watering:" FontSize="13" Foreground="DarkGreen" Margin="0,0,0,10"/>
            <Label Width="115" Height="35" Content="Fertilization:" FontSize="13" Foreground="DarkGreen" Margin="0,0,0,10"/>
            <Label Width="115" Height="34" Content="Difficulty:" FontSize="13" Foreground="DarkGreen" Margin="0,0,0,10"/>
            <Label Width="115" Height="35" Content="Decoration:" FontSize="13" Foreground="DarkGreen" Margin="0,0,0,10"/>
            <Label Width="116" Height="35" Content="Position:" FontSize="13" Foreground="DarkGreen" Margin="0,0,0,10"/>
            <Label Width="116" Height="35" Content="Moisturize:" FontSize="13" Foreground="DarkGreen"/>

        </StackPanel>
        
        
        
        <StackPanel Grid.Column="1">
            <Border  CornerRadius="10" Height="30" Width="121" Margin="0,40,0,15">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                        <GradientStop Color="LightPink" Offset="0.0"/>
                        <GradientStop Color="DeepPink" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <TextBlock HorizontalAlignment="Left" Height="20" Margin="8,5,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="102"/>
            </Border>
            <Border BorderBrush="Black" CornerRadius="10" Height="30" Canvas.Left="304" Canvas.Top="160" Width="121" Margin="0,0,0,15">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                        <GradientStop Color="LightSeaGreen" Offset="0.0"/>
                        <GradientStop Color="Blue" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <TextBlock HorizontalAlignment="Left" Height="20" Margin="8,5,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="102"/>
            </Border>
            <Border BorderBrush="Black"  CornerRadius="10" Height="30" Width="121" Margin="0,0,0,15">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                        <GradientStop Color="LightYellow" Offset="0.0"/>
                        <GradientStop Color="DarkRed" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <TextBlock HorizontalAlignment="Left" Height="20" Margin="8,5,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="102"/>
            </Border>
            <Border BorderBrush="Black" CornerRadius="10" Height="30" Width="121" Margin="0,0,0,15">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                        <GradientStop Color="LightGoldenrodYellow" Offset="0.0"/>
                        <GradientStop Color="Coral" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <TextBlock HorizontalAlignment="Left" Height="20" Margin="8,5,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="102"/>
            </Border>
            <Border BorderBrush="Black" CornerRadius="10" Height="30" Width="121" Margin="0,0,0,15">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                        <GradientStop Color="LightSkyBlue" Offset="0.0"/>
                        <GradientStop Color="CornflowerBlue" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <TextBlock HorizontalAlignment="Left" Height="20" Margin="8,5,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="102"/>
            </Border>

            <Border BorderBrush="Black" CornerRadius="10" Height="30" Width="121" Margin="0,0,0,15">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                        <GradientStop Color="LemonChiffon" Offset="0.0"/>
                        <GradientStop Color="GreenYellow" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <TextBlock HorizontalAlignment="Left" Height="20" Margin="8,5,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="102"/>
            </Border>

            <Border BorderBrush="Black" CornerRadius="10" Height="30" Width="121">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                        <GradientStop Color="LightGoldenrodYellow" Offset="0.0"/>
                        <GradientStop Color="RosyBrown" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <TextBlock HorizontalAlignment="Left" Height="20" Margin="8,5,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="102"/>
            </Border>
        </StackPanel>
        
        
        
        <StackPanel Grid.Column="2">
            <Label Height="35" Content="NAME" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="DarkGreen" Margin="0,0,0,5"/>
            <ListBox Height="300"/>

        </StackPanel>
    </Grid>
</UserControl>
